<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#38b6FF"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <ImageView
            android:id="@+id/QuestionButton"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_gravity="start"
            android:src="@drawable/question"
            android:padding="10dp"
 />

        <ImageView
            android:id="@+id/AccountButton"
            android:layout_width="133dp"
            android:layout_height="75dp"
            android:layout_gravity="end"
            android:layout_marginLeft="344dp"
            android:padding="10dp"
            android:src="@drawable/account"
            tools:ignore="NotSibling" />
    </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <ImageView
                android:id="@+id/Img"
                android:layout_width="364dp"
                android:layout_height="458dp"
                android:layout_gravity="center"
                android:src="@drawable/hoasen" />

            <ImageView
                android:id="@+id/PlayButton"
                android:layout_width="130dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:background="#38B6FF"
                android:src="@drawable/playbutton" />

            <TextView
                android:id="@+id/PlayText"
                android:layout_width="333dp"
                android:layout_height="34dp"
                android:layout_below="@+id/PlayButton"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:text="Làm trắc nghiệm"
                android:textAlignment="center"
                android:textColor="@android:color/white"
                android:textSize="18dp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                >
                <ImageView
                    android:id="@+id/HighScoreButton"
                    android:layout_width="130dp"
                    android:layout_height="100dp"
                    android:layout_gravity="center"
                    android:background="#38B6FF"
                    android:src="@drawable/emblem" />

                <TextView
                    android:id="@+id/HighScoreText"
                    android:layout_width="333dp"
                    android:layout_height="34dp"
                    android:layout_below="@+id/HighScoreButton"
                    android:layout_gravity="center"
                    android:text="Điểm cao nhất"
                    android:layout_marginLeft="8dp"
                    android:textAlignment="textStart"
                    android:textColor="@android:color/white"
                    android:textSize="18dp"
                    tools:ignore="RtlCompat" />


                <ImageView
                    android:id="@+id/QuitButton"
                    android:layout_width="130dp"
                    android:layout_height="100dp"
                    android:layout_marginStart="146dp"
                    android:layout_toEndOf="@id/HighScoreButton"
                    android:background="#38B6FF"
                    android:src="@drawable/emblem" />

                <TextView
                    android:id="@+id/QuitText"
                    android:layout_width="333dp"
                    android:layout_height="34dp"
                    android:layout_below="@+id/QuitButton"
                    android:layout_gravity="center"
                    android:layout_marginLeft="34dp"
                    android:layout_marginTop="3dp"
                    android:text="Thoát"
                    android:textAlignment="textEnd"
                    android:textColor="@android:color/white"
                    android:textSize="18dp"
                    tools:ignore="RtlCompat" />
            </RelativeLayout>
        </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>